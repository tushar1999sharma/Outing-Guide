/* Profile Section */
.profile-container{
    max-width: 93.5rem;
    padding: 0 2rem;
    margin-left: 400px;
}

.profile {
    padding: 5rem 0;
}

.profile::after {
    content: "";
    display: block;
    clear: both;
}

.profile-image {
    float: right;
    display: flex;
    position: relative;
    overflow: hidden;
}

.profile-image img {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    float: right;
}

.profile-user-settings,
.profile-stats,
.profile-bio {
    float: left;
    width: calc(66.666% - 2rem);
}

.profile-user-settings {
    margin-top: 1.1rem;
}

.profile-user-name {
    display: inline-block;
    font-size: 2.0rem;
    font-weight: 300;
}

.profile-btn {
    font-size: 1rem;
    line-height: 1.8;
    border: 0.1rem solid #dbdbdb;
    border-radius: 0.3rem;
    padding: 0 1.4rem;
    margin-left: 1.5rem;
}

.profile-settings-btn {
    font-size: 1.2rem;
    margin-left: 0.2rem;
}

.profile-stats {
    margin-top: 2.3rem;
}

.profile-stats li {
    display: inline-block;
    font-size: 1.2rem;
    line-height: 1.2;
    margin-right: 1rem;
    cursor: pointer;
}

.profile-stats li:last-of-type {
    margin-right: 0;
}

.profile-bio {
    font-size: 1.2rem;
    font-weight: 400;
    line-height: 0.1;
    margin-top: 2.3rem;
}

.profile-real-name,
.profile-stat-count,
.profile-btn  {
    font-weight: 600;
}

