	<div class="container profile-container">

		<div class="profile">

			<div class="profile-image">

				<img src="<%= user.avatar %>" alt="">

			</div>

			<div class="profile-user-settings">
				<h1 class="profile-user-name"><%= user.username %></h1>
        
        <% if(currentUser && currentUser._id == user.id){ %>
          <a href="/user/<%= user._id %>/edit" class="btn profile-btn" >Edit Profile</a>
        <% } else { %>
          <% let flag = 0; %>
          <% if(currentUser){ %>
            <% for(let i = 0; i < currentUser.following.length; i++){ %>
              <% if(currentUser.following[i].equals(user.id)){ %>
                <a href="/user/unfollow/<%= user._id %> " id="follow" class="btn profile-btn">UnFollow</a>
                <% flag = 1; %>
                <% break; %>
              <% } %> 
            <% } %>
          <% } %>
          <% if(flag == 0 || !currentUser){ %>
            <a href="/user/follow/<%= user._id %> " id="unfollow" class="btn profile-btn">Follow</a>
          <% } %>
      <% } %>  

				<!-- <button class="btn profile-settings-btn" aria-label="profile settings"><i class="fas fa-cog" aria-hidden="true"></i></button> -->

			</div>

			<div class="profile-stats">

				<ul>
					<!-- <li><span class="profile-stat-count">164</span> posts</li> -->
					<li><span class="profile-stat-count"> <%= user.follower.length %> </span> followers</li>
					<li><span class="profile-stat-count"> <%= user.following.length %> </span> following</li>
				</ul>

			</div>

			<div class="profile-bio">

        <p>
          <span class="profile-real-name"><%= user.name %></span> 
          :- <%= user.description.substring(0, 30) %>
          <% if(user.description.length > 30){ %>
            ...
          <% } %>
        </p>

			</div>

		</div>
		<!-- End of profile section -->

	</div>
	<!-- End of container -->

